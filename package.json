{
	"name": "mr-flower-pot",
	"version": "1.0.0",
	"description": "A discord and telegram bot.",
	"scripts": {
		"install": "npm install tsx discord.js telegraf openai sqlite3 dotenv concurrently @types/node",
		"start": "npx concurrently --kill-others \"npm run discord\" \"npm run telegram\"",
		"discord": "npx tsx discord.ts",
		"telegram": "npx tsx telegram.ts",
		"restart": "rm ./telegram.sqlite ./discord.sqlite"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/akshaaydev/mr-flower-pot"
	},
	"author": "Akshaay Kaldev",
	"license": "UNLICENSED",
	"dependencies": {
		"@types/node": "^20.12.12",
		"concurrently": "^8.2.2",
		"discord.js": "^14.15.2",
		"dotenv": "^16.4.5",
		"openai": "^4.47.1",
		"sqlite3": "^5.1.7",
		"telegraf": "^4.16.3",
		"tsx": "^4.10.5"
	}
}
