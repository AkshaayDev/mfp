		"discord.js": "^14.15.2",
		"dotenv": "^16.4.5",
		"npm-run-all": "^4.1.5",
		"openai": "^4.47.1",
		"sqlite3": "^5.1.7",
		"telegraf": "^4.16.3",
		"tsx": "^4.10.5"
	}
}
